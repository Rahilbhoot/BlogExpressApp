<%- include("partials/header.ejs") %>
    <% let todaysDate=new Date(); %>
        <div class="container">
            <div class="row g-5 mt-4">
                <h1>Edit Post</h1>
                <div class="col-md-9 d-flex flex-column gap-3">
                    <div class="card p-4">
                        <!-- form -->
                        <form action="/editdn/<%= blogWithId.id %>" method="post" class="d-flex flex-column gap-3">
                            <div class="form-group">
                                <input type="text" class="form-control" id="edit-title" name="editTitle" placeholder=""
                                    value="<%=blogWithId.ttl %>">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" id="edit-desc" name="editDesc"
                                    rows="10"><%=blogWithId.dsc %></textarea>
                            </div>
                            <input type="submit" value="update" class="btn btn-primary">
                        </form>
                    </div>


                </div>
                <div class="col-md-3">
                    <div class="position-sticky" style="top: 2rem;">
                        <div class="p-4 mb-3 bg-body-tertiary rounded d-flex flex-column gap-3">
                            <h4 class="fst-italic">Sharing knowledge, ideas, and creativity through engaging blogs for
                                learners, dreamers, and innovators alike.</h4>
                        </div>
                    </div>
                </div>
            </div>
            <%- include("partials/footer.ejs") %>